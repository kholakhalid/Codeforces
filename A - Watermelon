#include<stdio.h>
#include<stdlib.h>
#include<time.h>
int main(){
    int w;
    scanf("%d",&w);
    if(w>2)
    {
    if(w%2!=0)
    {
        printf("NO");
    }
    else{
        if((w/2)%2==0){
            printf("YES");
        }
        else
        {
            if((w/2+1)%2==0)
            {
                printf("YES");
            }
            else
            {
                printf("NO");
            }
            
        }
       
        
    }
    }
    else
    {
        printf("NO");
    }
    
}
