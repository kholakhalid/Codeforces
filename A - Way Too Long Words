#include<stdio.h>
#include<string.h>
int main()
{   int i,x,n;
    scanf("%d",&n);
    char s[1000];
    for(i=1;i<=n;i++){
       scanf("%s",s);
       if(strlen(s)<=10){
           printf("%s\n",s);
       }
       else{
           printf("%c%ld%c\n",s[0],strlen(s)-2,s[strlen(s)-1]);
       }
        
    }
    
}
